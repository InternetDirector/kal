<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@drawable/ms_back">
                <Button
                    android:id="@+id/ToWatch"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textFontWeight="400"
                    android:textColor="@color/white"
                    android:text="Смотреть"
                    android:textAllCaps="false"
                    android:layout_marginTop="292dp"
                    android:paddingVertical="13dp"
                    android:theme="@style/button1"
                    android:layout_gravity="center_horizontal"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="В тренде"
                android:textColor="@color/app_pink"
                android:textSize="24sp"
                android:textFontWeight="700"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="32dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="17dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="144dp"
                        android:background="@drawable/img1"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="144dp"
                        android:background="@drawable/img2"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="144dp"
                        android:background="@drawable/img3"/>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Новое"
                android:textColor="@color/app_pink"
                android:textSize="24sp"
                android:textFontWeight="700"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="32dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="17dp">
                    <ImageView
                        android:layout_width="240dp"
                        android:layout_height="144dp"
                        android:background="@drawable/img4"/>
                    <ImageView
                        android:layout_width="240dp"
                        android:layout_height="144dp"
                        android:background="@drawable/img5"/>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Для вас"
                android:textColor="@color/app_pink"
                android:textSize="24sp"
                android:textFontWeight="700"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="32dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="17dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="144dp"
                        android:background="@drawable/img6"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="144dp"
                        android:background="@drawable/img7"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="144dp"
                        android:background="@drawable/img8"/>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>